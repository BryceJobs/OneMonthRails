<div class="box">
	<%= link_to image_tag(pin.image(:medium)), pin %>

	<p class='description'>
  	<%= pin.description %>
	</p>

	<p>
		By <strong><%= pin.user.name %></strong>
	</p>

	

	<% if current_user == pin.user %>  
		<hr>
		<p>
		  <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %> |
		  <%= link_to 'Delete', pin, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
</div>

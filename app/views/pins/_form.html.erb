
	<%= simple_form_for(@pin) do |f| %>
	  <%= f.error_notification %>
	  <%= f.full_error :image_file_size, class: 'alert alert-danger' %>
	  <%= f.full_error :image_content_type, class: 'alert alert-danger' %>

	  <div class="form-inputs">
	    <%= f.input :image, required: true %>
	   <p style="text-align:center" class="lead">or</p> 
	    <%= f.input :image_remote_url, label:"Enter an image Url" %>
	   <p style="text-align:center" class="lead">Then</p> 
	    <%= f.input :description, input_html: {rows: 8} %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, class: 'btn btn-primary' %>
	  </div>
  <% end %>

